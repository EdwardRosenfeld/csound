		Top/argdecode.o Top/cscore_internal.o Top/cscorfns.o	\
		Top/csmodule.o Top/csound.o Top/getstring.o Top/main.o	\
		Top/new_opts.o Top/one_file.o Top/opcode.o Top/scot.o	\
		Top/threads.o Top/utility.o

$(CSOUNDLIB): $(CSOUNDLIB_OBJ)
	$(CXX) -O2 -shared -Wl,--output-def,$(subst .dll,.def,$(CSOUNDLIB)) -o $@ $^ $(LDFLAGS) $(LIBS)

Opcodes/%.o: Opcodes/%.c
	$(CC) $(CFLAGS) -c $< -o $@

%.o: %.c
	$(CC) -D__BUILDING_LIBCSOUND $(CFLAGS) -c $< -o $@

%.oo: %.cpp
	$(CXX) $(CFLAGS) -c $< -o $@

Opcodes/sfont.o: Opcodes/sfont.c
	$(CC) $(CFLAGS) -fno-strict-aliasing -c $< -o $@

