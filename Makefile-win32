$(CSOUNDLIB): $(CSOUNDLIB_OBJ)
	$(CXX) -O2 -shared -Wl,--export-all-symbols -o $@ $^ $(LDFLAGS) $(LIBS)

Opcodes/%.o: Opcodes/%.c
	$(CC) $(CFLAGS) -c $< -o $@

%.o: %.c
	$(CC) -D__BUILDING_LIBCSOUND $(CFLAGS) -c $< -o $@

%.oo: %.cpp
	$(CXX) $(CFLAGS) -c $< -o $@

Opcodes/sfont.o: Opcodes/sfont.c
	$(CC) $(CFLAGS) -fno-strict-aliasing -c $< -o $@

