clean:
	-rm `find . -type f \( -name "*.o" -o -name "*.oo" \) -print`
	-rm `find . -type f \( -name "*.a" -o -name "*.dll" \) -print`
	-rm `find . -type f \( -name "*.exe" -o -name "*.xmg" \) -print`

